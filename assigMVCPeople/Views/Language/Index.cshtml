@model List<Language>
@{
    ViewData["Title"] = "Index";
}

<ul class="nav nav-tabs">
    <a asp-action="Create" class="go-btn">Create New Language</a>
</ul>
<table class="table">
    <thead>
        <tr>
            <th>
                Language
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Language language in Model)
        {
            <tr>
                <td>
                    @language.LanguageName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@language.LanguageId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@language.LanguageId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@language.LanguageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
