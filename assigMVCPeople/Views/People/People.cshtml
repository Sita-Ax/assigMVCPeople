@model List<Person>
@{
    ViewData["Title"] = "People";
}

<h1>Search</h1>
<fieldset>
    <legend>Select what you want to search for: </legend>
    <input type="checkbox" name="SerachName" />
    <input type="checkbox" name="SearchCity" />
</fieldset>
<div class="row">
    <div class="col-md-4">
        <form asp-action="People" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input type="search" class="form-control" placeholder="Search for a name or city" />
              
            </div>
            <input type="submit" value="Search" />
        </form>
    </div>
    <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" asp-action="People(search)" />
        <span class="input-group-text border-10" id="search-addon">
            <i class="fas fa-search"></i>
        </span>
    </div>
</div>
@foreach (Person person in Model)
{
   @* @Html.RadioButtonFor(p => p.Name, person.Id, (person.IsSelect.Value) ? new {@checked = "checked"} : null )*@

    @person.Name

    if (person != null)
    {
        <div class="row" style="margin: 2px;">
            <div class="col-3">@person.Name</div>
            <div class="col-3">@person.PhoneNumber</div>
            <div class="col-3">@person.City</div>
        </div>
    }
}
