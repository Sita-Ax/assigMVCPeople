@model CreatePersonViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <label asp-for="Cities" class="control-label">Choose a City</label>
            <input asp-for="CityId" class="form-control" />
            <span asp-validation-for="CityId" class="text-danger"></span>

            @*<select asp-for="CityId" class="form-control">
                @foreach (City city in Model.Cities)
                {
                    <option value="@city.CityId">@city.CityName</option>
                }
            </select>*@

            <label asp-for="Languages" class="control-label"></label>
            <select multiple asp-for="LanguagesId" class="form-control">
                @foreach (Language language in Model.Languages)
                {
                    <option value="@language.LanguageId">@language.LanguageName</option>
                }
            </select>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>





