@model assigMVCPeople.Models.ViewModels.CreatePersonViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create a person</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>                                   
            </div>
            <label asp-for="Cities" class="control-label">Choose a City</label>
            <select asp-for="CityId" class="form-control">
                @foreach (City city in Model.Cities)
                {
                    <option value="@city.CityId">@city.CityName</option>
                }
            </select>
            <br /><br />
            <label asp-for="Languages" class="control-label">Choose what language you can speak</label>
            <select multiple asp-for="LanguagesId" class="form-control">
                @foreach (Language language in Model.Languages)
                {
                    <option value="@language.LanguageId">@language.LanguageName</option>
                }
            </select>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index" class="go-btn">Back to list of persons</a>
</div>

