@model Person

@{
    ViewData["Title"] = "Details";
}

<h1>Details like regular</h1>
<dl>
    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>PhoneNumber</dt>
    <dd>@Model.PhoneNumber</dd>

    <dt>City</dt>
    <dd>@Model.City</dd>
</dl>

<a asp-action="People" class="btn btn-dark">Back to the list of people</a>
<br />
<a class="btn btn-primary mt-5" asp-controller="People" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

<a asp-action="Edit" asp-controller="People" asp-route-id="@Model.Id" class="btn btn-warning mt-5">Edit</a>



